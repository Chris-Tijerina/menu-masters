{{#if recipes.length}}
<section>
	<div class="">
		<h2>Your recipes</h2>
	</div>
	<ol>
		{{#each recipes as |recipe|}}
		<li>
			{{> recipe-card recipe}}
			<a href="/dashboard/edit/{{recipe.id}}" class="edit-link">Edit recipe</a>
		</li>
		{{/each}}
	</ol>
</section>
{{/if}}
